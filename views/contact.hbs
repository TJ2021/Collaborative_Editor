<h1 class="text-center">Contact Us</h1>

<form class="col-md-6 col-md-offset-3" method="post">
    {{#each errorMessages}}
        <div class="alert alert-danger">
            {{this.msg}}
        </div>
    {{/each}}

    <div class="form-group">
        <label class="form-label" for="name">Name</label>
        <input type="text" class="form-control" placeholder="Your Name" name="name" value="{{name}}">
    </div>

    <div class="form-group">
        <label class="form-label" for="email">Email address</label>
         <input type="email" class="form-control" placeholder="Your Email address" name="email" value={{email}}>
    </div>

    <div class="form-group">
        <label class="form-label" for="message">Message</label>
        <textarea class="form-control" rows="3" name="message"></textarea>
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>

</form>